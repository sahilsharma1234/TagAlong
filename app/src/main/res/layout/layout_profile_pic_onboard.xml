<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="3dp">

    <FrameLayout
        android:id="@+id/rr1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user_profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/avatar_avatar_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_shape_signin"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:gravity="center"
                android:src="@drawable/ic_star_profile_top_xhdpi" />

            <TextView
                android:id="@+id/rider_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4.2"
                android:textColor="@android:color/white"
                android:textSize="8sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/payment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_payment_not_done_current_ride_xhdpi"/>

    </FrameLayout>

    <TextView
        android:id="@+id/name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC"
        android:textSize="16sp"
        android:layout_below="@id/rr1"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"  />

</RelativeLayout>