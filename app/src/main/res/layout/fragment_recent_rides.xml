<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey_color"
    tools:context=".activities.RecentRidesActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_recent_rides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/norideImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@drawable/ic_about_us_on_sidebar_xxxhdpi"/>

    <TextView
        android:id="@+id/no_recent_rides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_10_px"
        android:layout_below="@id/norideImg"
        android:text="No Rides Found"
        android:visibility="gone"
        android:textSize="@dimen/_16_px"
        />


</RelativeLayout>