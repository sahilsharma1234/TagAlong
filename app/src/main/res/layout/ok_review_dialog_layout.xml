<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_topImage_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-75dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.carpool.tagalong.views.RegularTextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination reached"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.carpool.tagalong.views.RegularTextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/reached_string"
                android:textSize="12sp" />

            <Button
                android:id="@+id/review_ride"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/colorGold"
                android:text="Review"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv_topImage_image"

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:elevation="8dp"
        android:src="@drawable/ic_location_reached_pop_xhdpi" />

</RelativeLayout>
