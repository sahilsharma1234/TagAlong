<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"

    android:paddingBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/name_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_driver_profile_image"
            android:layout_marginTop="-50dp"
            android:background="@color/colorGold"
            android:orientation="vertical"
            android:paddingLeft="130dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.carpool.tagalong.views.RegularTextView
                    android:id="@+id/tv_driver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="6dp"
                    android:text="Joseph Henry"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <com.carpool.tagalong.views.RegularTextView
                    android:id="@+id/tv_driver_Ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/ic_star_profile_top_xhdpi"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:paddingBottom="6dp"
                    android:text="4.2"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <com.carpool.tagalong.views.RegularTextView
                android:id="@+id/tv_driver_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:text="From:A"
                android:textColor="@android:color/white"
                android:textSize="14sp"

                />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_driver_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/avatar_avatar_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_parent_layout"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_ride_overview_xxhpi" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingRight="15dp">

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_source_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Noida"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_source_address"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="12 Mar,10:20AM"
                        android:textSize="12sp" />

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_dest_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        android:text="Gurdaspur"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_navogate_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_source_address"
                        android:gravity="center"
                        android:text="NAVIGATE"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/green"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Payment"
                        android:textSize="14sp" />

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_payment_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@+id/tv_payment_status"
                        android:text="$32.00"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_payment_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="Paid"
                        android:textColor="@color/green"
                        android:textSize="16sp" />

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_payment_status1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="Not paid"
                        android:visibility="gone"
                        android:textColor="@color/color_g_plus"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_sea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Seat Selected"
                        android:textSize="14sp" />

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_seat_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="One"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Bag/bags"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/tv_bags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/ic_tick_driving_prefrence_create_ride_xhdpi"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Traveling with children?"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/tv_traveling_with_children"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/ic_tick_driving_prefrence_create_ride_xhdpi" />

                </RelativeLayout>

                <com.carpool.tagalong.views.RegularTextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/ic_message_current_ride_xhdpi"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="Message"
                    android:textColor="@color/colorGold"
                    android:textSize="16sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/light_grey_color"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="CANCEL"
                        android:visibility="gone"
                        android:textColor="@color/orange_color"
                        android:textSize="15sp"
                        />

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_Reject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/light_grey_color"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="REJECT"
                        android:textColor="@color/orange_color"
                        android:textSize="15sp"
                        />

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_acepted"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@color/light_green"
                        android:gravity="center"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:text="ACCEPTED"
                        android:textColor="@color/green"
                        android:textSize="15sp"
                        />

                    <com.carpool.tagalong.views.RegularTextView
                        android:id="@+id/tv_acept"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@color/green"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="ACCEPT"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        />

                </LinearLayout>

                <com.ncorti.slidetoact.SlideToActView
                    android:id="@+id/tv_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="6dp"
                    app:area_margin="4dp"
                    app:text="SLIDE TO PICKUP"
                    app:border_radius="2dp"
                    app:text_size="16sp"
                    app:slider_height="64dp"
                    app:slider_locked="false"/>

